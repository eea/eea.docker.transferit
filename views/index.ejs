<!DOCTYPE html>
<html lang="en">

<%- include('header'); -%>

<body>

  <!-- Navigation -->
  <nav class="navbar navbar-light bg-light static-top">
    <div class="container">
      <img src="/pdflogo-web.png" alt="European Environment Agency" id="printLogo" class="lazy" style="">
      <form action="/logout" method="GET">
	 <button type="submit" class="btn btn-block btn-lg btn-secondary" data-toggle="popover" title="Logout" data-content="Click to logout"><%= username %></button>
	 <!--<label><%= username %></label>-->
      </form>
    </div>
  </nav>

  <!-- Masthead -->
  <header class="masthead text-white text-center pt-5">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-xl-9 mx-auto">
          <h1 class="mb-2"><%= appHeading %></h1>
          <h4 class="mb-4"><%= appSubHeading %></h4>
        </div>
        <div class="col-md-12 col-lg-12 col-xl-7 mx-auto">
          <form method="POST" action="/">
            <div class="form-row">

              <div class="col-12 col-md-12 mb-2 mb-md-2">
                <input type="email"  class="form-control form-control-lg" placeholder="Recipient email" name="email" value="">
                <textarea class="form-control form-control-lg mt-2" "exampleFormControlTextarea1" rows="8" placeholder="Insert your message in here .." name=message value="du du du da da da"></textarea>
                <div class="embed-responsive embed-responsive-16by9">
			<iframe class="embed-responsive-item mt-2" src="<%= folderName %>" allowfullscreen></iframe>
                </div>
              </div>

	      <!--<div class="btn btn-block btn-lg btn-primary mb-2" data-toggle="buttons">-->
	      <div class="col-md-12">
                  <label class="col-md-3 btn btn-secondary img-circle"> 
                    <input type="radio" name="retention" 
                      id="10d" autocomplete="off" value="10" 
                      checked> 10 days 
                  </label> 
                  <label class="col-md-3 btn btn-secondary img-circle"> 
                  <input type="radio" name="retention" 
                      id="30d" autocomplete="off" value="30"> 
                      30 days 
                  </label> 
                  <label class="col-md-3 btn btn-secondary img-circle"> 
                    <input type="radio" name="retention" 
                    id="90d" autocomplete="off" value="90"> 
                    90 days 
                  </label> 
                </div> 
              
	            <div class="col-md-6">
		            <button type="submit" class="btn btn-block btn-lg btn-secondary" name="submitButton" value="startOver">Start over</button>
              </div>
              <div class="col-md-6">
                <button type="submit" class="btn btn-block btn-lg btn-primary" name="submitButton" value="send">Send</button>
              </div>


            </div>
          </form>
        </div>
      </div>
    </div>
  </header>

  <%- include('footer'); -%>

</body>

</html>
